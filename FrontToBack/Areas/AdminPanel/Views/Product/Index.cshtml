@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
                <div class="table-responsive">
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@product.Price</td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success">Detail</a>
                                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

